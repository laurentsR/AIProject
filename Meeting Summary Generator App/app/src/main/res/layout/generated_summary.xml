<?xml version="1.0" encoding="utf-8"?><!--XML code for activity_main.xml-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <!--Heading Text View-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="663dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txthead"
        android:layout_marginBottom="67dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="86dp"
                android:text="@string/meeting_summary_placeholder"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="57dp"
                android:translationX="10dp"
                app:backgroundTint="@color/teal_700"
                app:drawableTopCompat="@drawable/ic_back"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txthead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="@string/meeting_summary"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="44sp" />

    <!--This will display the status of our app when we will record some audio
    and play that audio-->

    <!--Linear Layout for adding textviews in horizontal manner-->

</RelativeLayout>